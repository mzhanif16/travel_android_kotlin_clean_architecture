<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="-70dp"
        android:src="@drawable/logonew" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-140dp"
        android:orientation="vertical"
        android:paddingHorizontal="28dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Enter your email"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="355dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_input_field"
                android:fontFamily="@font/inter_medium"
                android:hint="example@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingStart="60dp"
                android:textCursorDrawable="@drawable/cursor_primary"
                android:textSelectHandle="@drawable/text_select_handle"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_input_drawable"
                android:backgroundTint="@color/primaryColor"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/baseline_email_24" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_error_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Please input email address"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:visibility="gone" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_medium"
            android:text="Enter your username"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/edt_username"
                android:layout_width="355dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_input_field"
                android:fontFamily="@font/inter_medium"
                android:hint="John doe"
                android:paddingStart="60dp"
                android:paddingEnd="16dp"
                android:textCursorDrawable="@drawable/cursor_primary"
                android:textSelectHandle="@drawable/text_select_handle"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_input_drawable"
                android:backgroundTint="@color/primaryColor"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/baseline_person_24" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_error_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:gravity="left"
            android:text="Please input username"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_medium"
            android:text="Enter your password"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="355dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_input_field"
                android:drawableRight="@drawable/baseline_visibility_off_24"
                android:fontFamily="@font/inter_medium"
                android:hint="xxxxxx"
                android:inputType="textPassword"
                android:paddingStart="60dp"
                android:paddingEnd="16dp"
                android:textCursorDrawable="@drawable/cursor_primary"
                android:textSelectHandle="@drawable/text_select_handle"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_input_drawable"
                android:backgroundTint="@color/primaryColor"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/baseline_key_24" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_error_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:gravity="left"
                android:text="Please input password"
                android:textColor="@color/red"
                android:textStyle="italic"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:gravity="right"
                android:text="Forgot Password?"
                android:textColor="@color/primaryColor"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_otp"
            android:layout_width="355dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_input_button"
            android:elevation="0dp"
            android:text="Send OTP Code"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>